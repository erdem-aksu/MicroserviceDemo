<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            @if (UiMessageOptions.ShowMessageIcon && UiMessageOptions.MessageIcon != null)
            {
                <MudIcon Size="Size.Large" Icon="@UiMessageOptions.MessageIcon.ToString()" Color="@Color" Class="mr-3 mb-n3"/>
            }
            @MudDialog.Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        @if (IsConfirm)
        {
            <MudButton OnClick="Cancel" StartIcon="@UiMessageOptions.CancelButtonIcon?.ToString()">@UiMessageOptions.CancelButtonText</MudButton>
            <MudButton Color="@Color" Variant="Variant.Filled" OnClick="Submit" StartIcon="@UiMessageOptions.ConfirmButtonIcon?.ToString()">@UiMessageOptions.ConfirmButtonText</MudButton>
        }
        else
        {
            <MudButton OnClick="Close" Color="@Color" Variant="Variant.Filled" StartIcon="@UiMessageOptions.OkButtonIcon?.ToString()">@UiMessageOptions.OkButtonText</MudButton>
        }
    </DialogActions>
</MudDialog>